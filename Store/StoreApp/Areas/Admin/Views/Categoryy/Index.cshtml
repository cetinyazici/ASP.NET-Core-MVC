@model IEnumerable<Category>
<div class="text-center">
    <div class="display-6">Category</div>

    <div class="d-flex justify-content-end my-3">
        <a class="btn btn-outline-success" asp-action="Create">
            <i class="fa fa-plus"></i>
            Create Category
        </a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Category Name</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Category category in Model)
            {
                <tr>
                    <td>@category.CategoryId</td>
                    <td>@category.CategoryName</td>
                    <td>
                        <div class="btn-group">
                            <a data-toggle="tooltip" data-placement="top" title="Edit" asp-action="Update" asp-route-id="@category.CategoryId" class="btn btn-warning rounded-pill m-1">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a data-toggle="tooltip" data-placement="top" title="Delete" asp-action="Delete" asp-route-id="@category.CategoryId" class="btn btn-danger rounded-pill m-1">
                                <i class="fa fa-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Script
{
    <script type="text/javascript">
        $(document).ready(() => {
            $('[data-toggle="tooltip"]').tooltip()
        });
    </script>
}