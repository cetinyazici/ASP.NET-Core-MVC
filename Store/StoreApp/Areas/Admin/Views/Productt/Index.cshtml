@model IEnumerable<Product>
<div class="text-center">
    <div class="display-6">Products</div>

    <div class="d-flex justify-content-end my-3">
        <a class="btn btn-outline-success" asp-action="Create">
            <i class="fa fa-plus"></i>
            Create Product
        </a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>ImageUrl</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Product product in Model)
            {
                <tr>
                    <td>@product.ProductId</td>
                    <td>
                        <img class="border border-danger rounded shadow" width="70" src="@product?.ImageUrl" alt="@product.ProductName" />
                    </td>
                    <td>@product.ProductName</td>
                    <td>@product.Price.ToString("c")</td>
                    <td>
                        <div class="btn-group">
                            <a asp-action="Update" asp-route-id="@product.ProductId" class="btn btn-warning">
                                <i class="fa fa-edit"></i>
                                Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@product.ProductId" class="btn btn-danger">
                                <i class="fa fa-trash"></i>
                                Delete
                            </a>
                            <a asp-area="" asp-controller="Product" asp-action="Get" asp-route-id="@product.ProductId" class="btn btn-info" target="_blank">
                                <i class="fa fa-search"></i>
                                Web
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>