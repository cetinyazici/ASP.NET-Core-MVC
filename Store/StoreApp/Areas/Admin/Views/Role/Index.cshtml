@model IEnumerable<IdentityRole>
<div class="text-center my-5">
    <div class="display-6">Roles</div>

    <div class="d-flex justify-content-end my-3">
        <a class="btn btn-outline-success" asp-action="Create">
            <i class="fa fa-plus"></i>
            Create
        </a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Role Name</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Name</td>
                    <td>
                        <div class="btn-group">
                            <a asp-action="Update" asp-route-id="@role.Id" class="btn btn-warning rounded-pill">
                                <i class="fa fa-edit"></i>
                                Edit
                            </a>
                            <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                                <button type="submit" class="btn btn-danger rounded-pill" onclick="return confirm('Are you sure you want to delete this role?');">
                                    <i class="fa fa-trash"></i>
                                    Delete
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>