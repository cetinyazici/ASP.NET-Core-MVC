@model ProductListViewModel

<div class="row">
    <div class="col-md-3 my-3">
        <div class="my-3">
            @await Component.InvokeAsync("CategoriesMenu")
            @await Component.InvokeAsync("ProductFilterMenu")
            <div class="mt-5" products="" number="3"></div>
        </div>
    </div>
    <div class="col-md-9">
        <div class="text-center my-3">
            <h2 class="dislay6">
                Products
            </h2>
        </div>
        <div class="row my-3">
            @foreach (Product product in Model.Products)
            {
                <partial name="ProductCard" model="@product"></partial>
            }
        </div>
        <div>
            <div page-model="@Model?.Pagination"
                 page-action="Index"
                 page-classes-enabled="true"
                 page-class="btn"
                 page-class-normal="btn-outline-dark"
                 page-class-selected="btn-primary"
                 class="btn-group">
            </div>
        </div>
    </div>
</div>

